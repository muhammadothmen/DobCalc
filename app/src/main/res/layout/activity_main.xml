<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainBg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="CALCULATE YOUR AGE"
        android:textColor="@color/BlueTxt"
        android:textSize="35dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/TxtSelDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text=" Your birthday"
        android:textColor="@color/PurpleText"
        android:textSize="20sp"
        android:textStyle="bold"
        />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="350sp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:layout_marginTop="25dp"
        >

    <TextView
        android:id="@+id/TxtYourAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter "
        android:textColor="@color/BlueTxt"
        android:textSize="50sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/TxtOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="your birthday"
        android:textColor="@color/BlueTxt"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    </LinearLayout>
    <Button
        android:id="@+id/BtnDateSel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/BtnBgColor"
        android:text="Enter birthday"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:padding="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        tools:context=".MainActivity"
        android:layout_marginTop="5dp"
        >

        <Button
            android:id="@+id/BtnDay"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:backgroundTint="@color/BtnBgColor"
            android:text="Day"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:paddingVertical="20dp"
        />


        <Button
            android:id="@+id/BtnHour"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="7dp"
            android:backgroundTint="@color/BtnBgColor"
            android:paddingVertical="20dp"
            android:text="Hour"
            android:textColor="@color/black"
            android:textSize="18dp"

            />

        <Button
            android:id="@+id/BtnMin"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:backgroundTint="@color/BtnBgColor"
            android:text="Min"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:paddingVertical="20dp"

            />

        <Button
            android:id="@+id/BtnSec"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:backgroundTint="@color/BtnBgColor"
            android:text="sec"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:paddingVertical="20dp"
            />


    </LinearLayout>
</LinearLayout>