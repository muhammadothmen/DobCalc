<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/MainBg"
    android:padding="16dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="CALCULATE YOUR"
        android:textColor="@color/BlueTxt"
        android:textSize="25sp"
        android:textStyle="bold"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="AGE"
        android:background="@color/TxtBg"
        android:textColor="@color/BlueTxt"
        android:padding="10dp"
        android:textSize="25sp"
        android:textStyle="bold"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="IN MINUTE"
        android:textColor="@color/BlueTxt"
        android:textSize="25sp"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/BtnDateSel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELECT DATE"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/BtnBgColor"
        android:textColor="@color/black"

        />

    <TextView
        android:id="@+id/TxtSelDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="dd/mm/yyyy"
        android:textColor="@color/BlueTxt"
        android:textSize="20sp"

        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Selected Date"
        android:textColor="@color/GrayText"
        android:textSize="16sp"
        android:textStyle="normal"

        />


    <TextView
        android:id="@+id/TxtInDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="0000"
        android:textColor="@color/BlueTxt"
        android:textSize="35sp"
        android:textStyle="bold"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Your Age In Days"
        android:textColor="@color/GrayText"
        android:textSize="16sp"
        android:textStyle="normal"

        />

    <TextView
        android:id="@+id/TxtInHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="000000"
        android:textColor="@color/BlueTxt"
        android:textSize="35sp"
        android:textStyle="bold"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Your Age In Hours"
        android:textColor="@color/GrayText"
        android:textSize="16sp"
        android:textStyle="normal"

        />

    <TextView
        android:id="@+id/TxtInMinute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="00000000"
        android:textColor="@color/BlueTxt"
        android:textSize="35sp"
        android:textStyle="bold"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Your Age In minutes"
        android:textColor="@color/GrayText"
        android:textSize="16sp"
        android:textStyle="normal"

        />
    <TextView
        android:id="@+id/TxtInSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="0000000000"
        android:textColor="@color/BlueTxt"
        android:textSize="35sp"
        android:textStyle="bold"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Your Age In Seconds"
        android:textColor="@color/GrayText"
        android:textSize="16sp"
        android:textStyle="normal"

        />



</LinearLayout>